<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="base">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="footer" parent="base">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="footer_selected" parent="footer">
        <item name="android:color">@color/selected</item>
    </style>

    <style name="article_author">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="article_time">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/genre</item>
    </style>

    <style name="article_content">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
